@page
@model CoogMusic.Pages.Upload.IndexModel
@{

}

<br>
<h2>List of Artist</h2>
<a class="btn btn-primary btn-sm" href="/Upload/Create">New Song</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Record Label</th>
            <th>Create Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listSongs)
         {
            <tr>
                <td>@item.Name</td>
                <td>@item.RecordLabel</td>
                <td>@item.CreateDate</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Upload/Edit?id=@item.ArtistId">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Upload/Delete?id=@item.ArtistId">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>
