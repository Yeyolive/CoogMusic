@page

@model CoogMusic.Pages.Search.IndexModel
@{
    ViewData["Title"] = "Search";
}
<div class="text-center">
    <h1>Search</h1>
</div>
<div>
    <div class="searching">
        <form method="POST" class="search-bar">
            <label for="search-input">Search:</label>
            <input type="text" id="search-input" name="Title" placeholder="Search for Song or Artist.">
            <button type="submit">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>
    <div>
        @if (Model.listSongs.Any())
        {
        <table class="table">
            <thead>
                <tr>
                    <th class="table-header">Title</th>
                    <th class="table-header">Genre</th>
                    <th class="table-header">Duration</th>
                    <th class="table-header">Explicit</th>
                    <th class="table-header">Create Date</th>
                    <th class="table-header">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listSongs)
                    {
                    @if (@item.deleted != true)
                        {
                        <tr>
                            <td>@item.title</td>
                            <td>@item.genre</td>
                            <td>@item.Duration</td>
                            @if (item.Explicit == true)
                            {
                                <td>Yes</td>
                            }
                            else
                            {
                                <td>No</td>
                            }
                            <td>@item.CreateDate</td>
                            <td>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="btn btn-primary btn-action"
                                   onclick="playSong(&quot;@item.songId&quot;, &quot;@item.title&quot;, &quot;@item.artistName&quot;)">
                                    Play
                                </a>
                            }
                            else
                            {
                                <span>Please log in to play music.</span>
                            }
                            </td>
                        </tr>
                        }
                    }
            </tbody>
        </table>
        }
        else if (Model.SearchPerformed)
        {
            <br />
            <p class="text-center">No songs were found.</p>
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="music-player">
            <h3 id="song-title"></h3>
            <audio id="audio-player" src=""></audio>
            <div class="controls">
                <button id="prev-button">
                    <i class="fas fa-backward"></i>
                </button>
                <button id="play-pause-button">
                    <i class="fas fa-play"></i>
                </button>
                <button id="skip-button">
                    <i class="fas fa-forward"></i>
                </button>
            </div>
            <span id="current-time">0:00</span>
            <progress id="music-progress" max="100"></progress>
            <span id="full-length">0:00</span>
            <div class="volume-slider-container">
                <i class="fas fa-volume-up"></i>
                <input type="range" id="volume-slider" name="volume-slider" min="0" max="1" step="0.01" value="1" />
            </div>
        </div>
     }
     else
     {
        <div class="alert alert-info">
            Please log in to access the music player.
        </div>
     }
</div>