@page
@model CoogMusic.Pages.Report.Mostplayed_ReportModel
@{
    ViewData["Title"] = "Report";
}

<div>
    <h1 class="text-center">Mostplayed Report</h1>
    <form method="post">
        <select id="album" name="AlbumId" class="form-input" value="">
            <option value="" selected>Choose an Album</option>
            @foreach (var item in Model.Albums)
            {
                <option value="@item.Id">@item.Title</option>
            }
       </select>
        <button type="submit" asp-page-handler="GenerateReport">Generate Report</button>
    </form>


    @if (Model.ReportHtml != null)
    {
        <div class="mt-3">
            <h3 class="text-center mb-3">Mostplayed Report for Album @Model.SelectedAlbumTitle</h3>
            @Html.Raw(Model.ReportHtml)
        </div>
    }
</div>

